<Page
    
    x:Class="Calc.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Calc"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <Button x:Name="dotButton" Content="," Height="100" Margin="35,630,0,0" VerticalAlignment="Top" Width="200" FontSize="22" Click="dotClickHandler"/>
        <Button Content="0" Height="100" Margin="240,630,0,0" VerticalAlignment="Top" Width="200" Click="Button_Click" FontWeight="Bold" FontFamily="Calibri" FontSize="20"/>
        <Button x:Name="calculateButton" IsEnabled="False" Content="=" Height="100" Margin="445,630,0,0" VerticalAlignment="Top" Width="200" FontSize="22" Click="calcButtonHandler"/>
        <Button Content="9" Height="100" Margin="445,525,0,0" VerticalAlignment="Top" Width="200" Click="Button_Click" FontWeight="Bold" FontFamily="Calibri" FontSize="20"/>
        <Button Content="8" Height="100" Margin="240,525,0,0" VerticalAlignment="Top" Width="200" Click="Button_Click" FontWeight="Bold" FontFamily="Calibri" FontSize="20"/>
        <Button Content="7" Height="100" Margin="35,525,0,0" VerticalAlignment="Top" Width="200" Click="Button_Click" FontWeight="Bold" FontFamily="Calibri" FontSize="20"/>
        <Button Content="4" Height="100" Margin="35,420,0,0" VerticalAlignment="Top" Width="200" Click="Button_Click" FontWeight="Bold" FontFamily="Calibri" FontSize="20"/>
        <Button Content="5" Height="100" Margin="240,420,0,0" VerticalAlignment="Top" Width="200" Click="Button_Click" FontWeight="Bold" FontFamily="Calibri" FontSize="20"/>
        <Button Content="6" Height="100" Margin="445,420,0,0" VerticalAlignment="Top" Width="200" Click="Button_Click" FontWeight="Bold" FontFamily="Calibri" FontSize="20"/>
        <Button Content="3" Height="100" Margin="445,315,0,0" VerticalAlignment="Top" Width="200" Click="Button_Click" FontWeight="Bold" FontFamily="Calibri" FontSize="20"/>
        <Button Content="2" Height="100" Margin="240,315,0,0" VerticalAlignment="Top" Width="200" Click="Button_Click" FontWeight="Bold" FontFamily="Calibri" FontSize="20"/>
        <Button Content="1" Height="100" Margin="35,315,0,0" VerticalAlignment="Top" Width="200" Click="Button_Click" FontWeight="Bold" FontFamily="Calibri" FontSize="20"/>
        <TextBlock x:Name="inputForm" HorizontalAlignment="Left" Margin="445,210,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="100" Width="401" FontSize="24" TextAlignment="Center" FontWeight="Bold"/>
        <Button x:Name="subtractEvent" Content="-" Height="100" Margin="0,630,0,0" VerticalAlignment="Top" Width="200" FontSize="22" Click="eventButtonClickHandler" HorizontalAlignment="Center"/>
        <Button x:Name="foldEvent" Content="+" Height="100" Margin="0,525,0,0" VerticalAlignment="Top" Width="200" FontSize="22" Click="eventButtonClickHandler" HorizontalAlignment="Center"/>
        <Button x:Name="devideEvent" Content="/" Height="100" Margin="0,420,0,0" VerticalAlignment="Top" Width="200" FontSize="22" Click="eventButtonClickHandler" HorizontalAlignment="Center"/>
        <Button x:Name="multiplyEvent" Content="x" Height="100" Margin="0,315,0,0" VerticalAlignment="Top" Width="200" FontSize="22" Click="eventButtonClickHandler" HorizontalAlignment="Center"/>
        <TextBlock x:Name="questionView" HorizontalAlignment="Left" Margin="35,19,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Height="162" Width="810" FontSize="48" TextAlignment="Center" FontWeight="Bold"/>
        <Button Content="c" Height="100" Margin="35,210,0,0" VerticalAlignment="Top" Width="405" FontWeight="Bold" FontFamily="Calibri" FontSize="40" Click="resetButtonHandler"/>


    </Grid>
</Page>

